{
  "compilerOptions": {
    "rootDirs": ["src"],

    "baseUrl": "./",
    "sourceMap": true,

    "target": "ES2015",
    "lib": ["esnext", "es7", "dom"],
    "jsx": "react",

    "module": "esnext",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noImplicitAny": false,

    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,

    "paths": {
      "root/*": ["./*"],
      "src": ["src"],
      "src/*": ["src/*"],
      "api": ["src/api"],
      "api/*": ["src/api/*"],
      "App": ["src/App"],
      "App/*": ["src/App/*"],
      "assets": ["src/assets"],
      "assets/*": ["src/assets/*"],
      "core": ["src/core"],
      "core/*": ["src/core/*"],
      "features": ["src/features"],
      "features/*": ["src/features/*"],
      "services": ["src/services"],
      "services/*": ["src/services/*"],
      "styles": ["src/styles"],
      "styles/*": ["src/styles/*"],
      "types": ["src/types"],
      "types/*": ["src/types/*"]
    },

    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "dashes",
          "postCssOptions": {
            "useConfig": true,
            "excludePlugins": [
              "postcss-import",
              "postcss-normalize",
              "postcss-color-mod-function"
            ]
          }
        }
      }
    ]
  },
  "exclude": ["node_modules"]
}
